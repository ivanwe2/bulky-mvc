@model Product

<div class="card shadow border-0 my-5">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="Id" hidden />
			<div class="form-floating py-2 col-12">
				<input asp-for="Title" type="text" disabled class="form-control border-0 shadow" />
				<label asp-for="Title" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<textarea asp-for="Description" type="text" disabled class="form-control border-0 shadow"></textarea>
				<label asp-for="Description" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="ISBN" type="text" disabled class="form-control border-0 shadow" />
				<label asp-for="ISBN" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Author" type="text" disabled class="form-control border-0 shadow" />
				<label asp-for="Author" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="ListPrice" type="number" disabled class="form-control border-0 shadow" />
				<label asp-for="ListPrice" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Price" type="number" disabled class="form-control border-0 shadow" />
				<label asp-for="Price" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Price50" type="number" disabled class="form-control border-0 shadow" />
				<label asp-for="Price50" class="ms-2"></label>
			</div>
			<div class="form-floating py-2 col-12">
				<input asp-for="Price100" type="number" disabled class="form-control border-0 shadow" />
				<label asp-for="Price100" class="ms-2"></label>
			</div>
			<div class="row pt-2">
				<div class="col-6 ">
					<button type="submit" class="btn btn-danger float-start" style="width:150px">Delete</button>
				</div>

				<div class="col-6">
					<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary float-end" style="width:150px">
						Back
					</a>
				</div>
			</div>
		</form>
	</div>
</div>