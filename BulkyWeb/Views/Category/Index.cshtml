@model List<Category>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h1 class=" text-light">Category List</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-asp-controller="Category" asp-action="Create" class=" btn btn-primary">
				<i class="bi bi-plus-square-fill"></i> Create Category
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>
			Category Name
		</th>
		<th>
			Display Order
		</th>
	</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td> @item.Name </td>
				<td> @item.DisplayOrder</td>
			</tr>
		}
	</tbody>
</table>