@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@{
}

@*<partial name="_Notification" />*@

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h1 class=" text-light">Category List</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/Categories/Create" class=" btn btn-primary">
				<i class="bi bi-plus-square-fill"></i> Create Category
			</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped table-light">
	<thead>
	<tr>
		<th>
			Category Name
		</th>
		<th>
			Display Order
		</th>
		<th>
			Actions
		</th>
	</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.CategoryList.OrderBy(m => m.DisplayOrder))
		{
			<tr>
				<td> @item.Name </td>
				<td> @item.DisplayOrder</td>
				<td class="text-center">
					<div class="w-75 btn-group" role="group">
						<a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2 rounded-pill">
							<i class="bi bi-pencil-square"></i> Edit
						</a>

						<a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2 rounded-pill">
							<i class="bi bi-trash"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>