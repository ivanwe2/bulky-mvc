@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
@{
}
<form method="post">
	<input asp-for="Category.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-light">
				Delete Category
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label>Category Name</label>
			<input asp-for="Category.Name" type="text" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label>Display Order</label>
			<input asp-for="Category.DisplayOrder" disabled type="text" class="form-control" />
		</div>
	</div>
	<div class="row">
		<div class="col-6 ">
			<button type="submit" class="btn btn-danger float-start" style="width:150px">Delete</button>
		</div>

		<div class="col-6">
			<a asp-page="/categories/index" class="btn btn-light btn-outline-primary float-end" style="width:150px">
				Back
			</a>
		</div>
	</div>
</form>
